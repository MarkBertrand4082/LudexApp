@model LudexApp.Models.User

@{
    ViewData["Title"] = $"{Model.Username}'s Game Library";
}

<h2>@Model.Username's Game Library</h2>

<a asp-action="Profile" asp-route-id="@Model.Id">Back to Profile</a>
<hr />

@if (Model.GameLibrary != null && Model.GameLibrary.Count > 0)
{
    <div class="row">
        @foreach (var userGame in Model.GameLibrary)
        {
            <div class="col-md-3 mb-4">
                <div class="card">
                    <!-- Cover art -->
                    <img src="@userGame.Game.Cover" class="card-img-top" alt="@userGame.Game.Name" />

                    <div class="card-body">
                        <h5 class="card-title">@userGame.Game.Name</h5>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No games in the library.</p>
}
