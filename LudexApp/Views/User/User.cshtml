@* Lew Lin *@
@model LudexApp.Models.ViewModels.UserViewModel

@{
    ViewData["Title"] = $"{Model.Username}'s Profile";
    bool isLoggedIn = User.Identity?.IsAuthenticated ?? false;
    int? currentUserId = null;
    if (isLoggedIn)
    {
        currentUserId = int.TryParse(User.FindFirst("nameidentifier")?.Value, out var id) ? id : null;
    }
}

<h2>@Model.Username's Profile</h2>

<div class="mb-3">
    <strong>Email:</strong> @Model.Email
</div>

@* Add/Remove Friend Buttons *@
@if (!Model.IsCurrentUser && isLoggedIn)
{
    <div class="mb-3">
        @if (Model.IsFriend)
        {
            <form asp-controller="User" asp-action="RemoveFriend" method="post">
                <input type="hidden" name="friendId" value="@Model.Id" />
                <button type="submit" class="btn btn-danger">Remove Friend</button>
                @Html.AntiForgeryToken()
            </form>
        }
        else
        {
            <form asp-controller="User" asp-action="AddFriend" method="post">
                <input type="hidden" name="friendId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary">Add Friend</button>
                @Html.AntiForgeryToken()
            </form>
        }
    </div>
}

<!-- Button to navigate to user's library -->
<div class="mb-4">
    <form asp-controller="User" asp-action="UserLibrary" method="get">
        <input type="hidden" name="id" value="@Model.Id" />
        <button class="btn btn-primary">View Game Library</button>
    </form>
</div>

<hr />

<h3>Posts</h3>
@if (Model.Posts != null && Model.Posts.Count > 0)
{
    <ul class="list-group mb-4">
        @foreach (var post in Model.Posts)
        {
            <li class="list-group-item">
                <strong>@post.Title</strong><br />
                @post.Content
            </li>
        }
    </ul>
}
else
{
    <p>No posts yet.</p>
}

<hr />

<h3>Reviews</h3>
@if (Model.Reviews != null && Model.Reviews.Count > 0)
{
    <ul class="list-group">
        @foreach (var review in Model.Reviews)
        {
            <li class="list-group-item">
                <strong>Game ID:</strong> @review.GameId <br />
                <strong>Rating:</strong> @review.Rating / 10 <br />
                @review.Content
            </li>
        }
    </ul>
}
else
{
    <p>No reviews yet.</p>
}

<hr />
<h3>Friends</h3>
@if (Model.Friends != null && Model.Friends.Count > 0)
{
    <ul class="list-group">
        @foreach (var friend in Model.Friends)
        {
            <li class="list-group-item">
                <a asp-controller="User"
                   asp-action="Profile"
                   asp-route-id="@friend.FriendId">
                    @friend.FriendName
                </a>
            </li>
        }
    </ul>
}
else
{
    <p>No friends yet.</p>
}