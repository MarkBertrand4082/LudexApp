@* Andrew Neto *@
@model LudexApp.Models.ViewModels.ReviewDisplayViewModel

@{
    ViewData["Title"] = "Reviews for " + Model.GameTitle;
}

<h2>Reviews for @Model.GameTitle</h2>

<p>
    Average rating: @Model.AverageRating.ToString("0.0")/5
    (@Model.ReviewCount review@(Model.ReviewCount == 1 ? "" : "s"))
</p>

@if (User.Identity?.IsAuthenticated ?? false)
{
    <form asp-controller="Review" asp-action="Post" method="get" class="mb-3">
        <input type="hidden" name="gameId" value="@Model.GameId" />
        <button type="submit" class="btn btn-primary">Write a Review</button>
    </form>
}
else
{
    <p><a asp-controller="User" asp-action="Login">Log in</a> to write a review.</p>
}

@if (!Model.Reviews.Any())
{
    <p>No reviews yet. Be the first to review this game!</p>
}
else
{
    <ul class="list-group">
        @foreach (var r in Model.Reviews)
        {
            <li class="list-group-item">
                <strong>@r.Username</strong> rated it @r.Rating/5<br />
                <small>@r.CreatedAt.ToLocalTime().ToString("g")</small>
                <p>@r.Content</p>

                @if (r.CanDelete)
                {
                    <form asp-action="Delete" method="post" class="mt-1">
                        <input type="hidden" name="id" value="@r.ReviewId" />
                        <input type="hidden" name="gameId" value="@Model.GameId" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        @Html.AntiForgeryToken()
                    </form>
                }
            </li>
        }
    </ul>
}
